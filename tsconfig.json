{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
